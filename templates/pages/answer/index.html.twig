{% extends 'base.html.twig' %}

{% block title %}SGRS - Aswers
{% endblock %}

{% block body %}
	{% if not answers.items is same as ([]) %}


		<h1 class="mt-4">All Answers</h1>
		<div class="count mt-4">
			Number of pages:
			{{ answers.getTotalItemCount }}
		</div>
		{#   #}
		<table class="table mt-4">
			<thead>
				<tr>
					<th scope="col">ID</th>

					<th scope="col">solution</th>
					<th scope="col">Complaint</th>
					<th scope="col">Submited at</th>
					<th scope="col">Updated at</th>
					{# <th scope="col" colspan="2">Action</th> #}
				</tr>
			</thead>
			<tbody>
				{% for answer in answers %}
					<tr>
						<th scope="row">{{ answer.id }}</th>
						<th scope="row">{{ answer.complaint.id }}</th>
						<td class="text-truncate" style="max-width: 150px">{{ answer.solution }}</td>
						<td>{{ answer.createdAt|date("m/d/Y") }}</td>
						<td>{{ answer.UpdatedAt|date("m/d/Y")}}</td>
						{# <td>
																																																																																											<a href="{{ path('complaint.edit', {id: complaint.id}) }}" class="btn btn-info">edit</a>
																																																																																										</td>
																																																																																										<td>
																																																																																											<a href="{{ path('complaint.delete', {id: complaint.id}) }}" class="btn btn-warning">delete</a>
																																																																																										</td> #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(answers) }}
		</div>
	{% else %}
		<h1>No answers found</h1>
	{% endif %}
{% endblock %}
